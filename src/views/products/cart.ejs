<!DOCTYPE html>
<html lang="en">
<head>
    <title>Carro de compras</title>
    <link rel="stylesheet" href="/css/styles-cart.css">
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="total">
            <div class="cart-left">
                <h1 class="cartTittle">Tu carro de compras</h1>
                <section class="cart">
                    <% if(cart.length>0){ %>
                        <% for(let product of cart) { %>
                            <article class="venta">
                                <div class="foto-venta">
                                    <a href=""><img src="<%= product.imagenLogo %>"></a>
                                </div>
                                <div class="main-venta">
                                    <div class="title">
                                        <p><%= product.nombre %></p>
                                        <div class="plataformas"> 
                                            <% for(let compatibilidad of product.compatibilidad) { %>
                                                <p><i class="<%= compatibilidad %>"></i></p>
                                            <%} %>
                                        </div>
                                    </div>
                                    <div>
                                        <p class="price">ARS $<%= product.precio %></p>
                                        <a class="remove_link" href="">Remover</a>
                                    </div>
                                </div>
                            </article>
                        <% } %>
                    <% } else { %>
                        <p>Tu carrito esta Vacio</p>
                    <% } %>
                    
                </section>
                <section class="cart-suma">
                    <div class="price-sum">
                        <p>Total estimado</p>
                        <% if(cart.length > 0){ %>
                            <% let sum = 0 %>
                            <% for(let product of cart) { %>
                                <% sum += product.precio %>
                            <% } %>
                            <p>ARS $<%= sum %></p>
                        <% } else { %>
                            <p>ARS $0</p>
                        <% } %>
                    </div>
                    <div class="button-buy">
                        <a href="#" class="button-iniciar-sesion"><span>Comprar para mi</span></a>
                        <a href="#" class="button-iniciar-sesion"><span>Comprar como regalo</span></a>
                    </div>
                </section>
                <p class="anuncio-iva">Todos los precios incluyen IVA</p>
                <a href=""><p class="remove-all">Eliminar todos los articulos</p></a>
            </div>
            <section class="recomendados-cart">
                <div class="recomendado-game">
                    <a href="">
                        <img src="/imagenes/minecraft.jpeg" alt="">
                        <div class="main-class">
                            <h3>Minecraft</h3>
                            <div class="descuento-precio">
                                <p class="descuento">67%</p>
                                <p class="precio">3.750$</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="recomendado-game">
                    <a href="">
                        <img src="/imagenes/gran-turismo.jpg" alt="">
                        <div class="main-class">
                            <h3>Gran Turismo</h3>
                            <div class="descuento-precio">
                                <p class="descuento">20%</p>
                                <p class="precio">12.400$</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="recomendado-game">
                    <a href="">
                        <img src="/imagenes/nba-2k20.jpg" alt="">
                        <div class="main-class">
                            <h3>NBA 2K20</h3>
                            <div class="descuento-precio">
                                <p class="descuento">50%</p>
                                <p class="precio">5.500$</p>
                            </div>
                        </div>
                    </a>
                </div>
            </section>
        </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>