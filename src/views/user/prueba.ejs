<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Document</title>
    <link rel="stylesheet" href="../css/styles-prueba.css">
</head>
<body>
    <div class="juegos">
        <% for(let juegos of producto) { %>
            <article>
                <a href="/producDetail">
                <img src="<%= juegos.imagenLogo %>" alt="">
                <div class="main-class">
                    <h3><%= juegos.nombre %></h3>
                    <div class="plataformas"> 
                        <% for(let compatibilidad of juegos.compatibilidad) { %>
                            <p><i class="<%= compatibilidad %>"></i></p>
                        <%} %>
                    </div>
                    <div class="descuento-precio">
                        <p class="descuento"><%= juegos.descuento %></p>
                        <p class="precio"><%= juegos.precio %></p>
                    </div>
                </div>
                </a>
            </article>
        <%} %>
    </div>
</body>
</html>


